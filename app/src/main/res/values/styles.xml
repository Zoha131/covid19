<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_bg</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>

    <style name="TextAppearance.CoronaNews.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.EditTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Completed" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/nunito_semi_bold_italic</item>
    </style>

    <style name="TextAppearance.CoronaNews.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>
    <style name="TextAppearance.CoronaNews.Caption.Light" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TextAppearance.CoronaNews.BottomButton" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TextAppearance.CoronaNews.WorldTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TextAppearance.CoronaNews.ExpandTitle" parent="TextAppearance.CoronaNews.Headline4">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.CoronaNews.CollapsTitle" parent="TextAppearance.CoronaNews.Headline5">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.CoronaNews.worldTotalNum" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.WorldSubTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.WorldSubNumber" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.CoronaNews.CountryCollapse" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>


    <style name="Style.CoronaComponent.CountryView.Expanded.Label" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/country_expand_unit_vertical_margin</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.CoronaNews.WorldTitle</item>
    </style>

    <style name="Style.CoronaComponent.CountryView.Expanded.Digit" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txtWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.CoronaNews.WorldSubTitle</item>
    </style>

    <style name="Style.CoronaComponent.CountryView.Expanded.Divider" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/country_expand_unit_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/country_expand_divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/country_expand_divider_margin</item>
        <item name="android:background">@color/textPrimary</item>
    </style>

</resources>
